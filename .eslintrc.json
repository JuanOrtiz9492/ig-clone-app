{
	"env": {
		"browser": true,
		"es2021": true,
		"jest": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"airbnb",
		"prettier"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"react",
		"prettier"
	],
	"rules": {
		"prefer-promise-reject-errors": [
			"off"
		],
		"react/jsx-filename-extension": [
			"off"
		],
		"react/prop-types": [
			"warn"
		],
		"no-return-assign": [
			"off"
		]
	}
}